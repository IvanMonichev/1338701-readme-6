{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": true,
    "baseUrl": ".",
    "paths": {
      "@project/authentication": ["libs/user/authentication/src/index.ts"],
      "@project/blog-comment": ["libs/post/blog-comment/src/index.ts"],
      "@project/blog-post": ["libs/post/blog-post/src/index.ts"],
      "@project/blog-tag": ["libs/post/blog-tag/src/index.ts"],
      "@project/blog-user": ["libs/user/blog-user/src/index.ts"],
      "@project/config": ["libs/user/config/src/index.ts"],
      "@project/data-access": ["libs/shared/data-access/src/index.ts"],
      "@project/email-subscriber": ["libs/notification/email-subscriber/src/index.ts"],
      "@project/interceptors": ["libs/shared/interceptors/src/index.ts"],
      "@project/notification-config": ["libs/notification/notification-config/src/index.ts"],
      "@project/pipes": ["libs/pipes/src/index.ts"],
      "@project/post-config": ["libs/post/post-config/src/index.ts"],
      "@project/post-models": ["libs/post/models/src/index.ts"],
      "@project/post-notification": ["libs/post/post-notification/src/index.ts"],
      "@project/shared/core": ["libs/shared/core/src/index.ts"],
      "@project/shared/helpers": ["libs/shared/helpers/src/index.ts"],
      "@project/upload-config": ["libs/upload-library/upload-config/src/index.ts"],
      "@project/uploader": ["libs/upload-library/uploader/src/index.ts"],
      "@project/user-notification": ["libs/user/user-notification/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
